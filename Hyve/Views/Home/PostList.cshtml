@model Hyve.ViewModels.Home.PostListViewModel

@using Hyve.Models;

@if (Model.Posts.Count > 0) {
    <div class="post-list">
        @foreach (Post post in Model.Posts) {
            <div class="item">
                <div class="title">
                    @if (!string.IsNullOrEmpty(post.ExternalLink)) {
                        <a href="@post.ExternalLink">@post.Title</a>
                    } else {
                        @Html.ActionLink(post.Title, "Post", "Home", new { id = post.Id }, null)
                    }
                </div>
                <div class="info">
                    <div class="comments">
                        @Html.ActionLink("21 comments", "Post", "Home", new { id = post.Id }, null)
                    </div>
                </div>
            </div>
        }
    </div>
} else {
    <p>There are no posts!</p>
}
