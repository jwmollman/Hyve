@model Hyve.ViewModels.Home.PostListViewModel

@if (Model.Posts.Count > 0) {
    <div class="post-list">
        @for (int i = 0; i < Model.Posts?.Count; i++) {
            <div class="item">
                <div class="number">
                    @($"{i + 1}.")
                </div>
                <div class="rating-options">
                    <div class="up"></div>
                    <div class="down"></div>
                </div>
                @Html.Partial("Partials/_PostSubInfo", Model.Posts[0])
            </div>
        }
    </div>
} else {
    <p>There are no posts</p>
}
