<!DOCTYPE html>

<html lang="en-us">
    <head>
        @if (ViewBag.Title == null) {
            <title>hyve</title>
        } else {
            <title>@ViewBag.Title : hyve</title>
        }

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        @Styles.Render("~/styles/main")
        @RenderSection("ScriptsHeader", false)
    </head>

    <body>
        <div class="main">
            <div class="header">
                header
            </div>
            <div class="content">
                @RenderBody()
            </div>
            <div class="footer">
                footer
            </div>
        </div>
        @RenderSection("ScriptsFooter", false)
    </body>
</html>
